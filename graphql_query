query {
  PLACEHOLDER
}

fragment firstNCommits on Repository {
    master:defaultBranchRef {
      head:target {
        ...on Commit {
          history(first:30) {
            commits:nodes {
              message
              pushedDate
              authoredDate
              author {
                user {
                  login
                  name
                  email
                }
              }
            }
          }
        }
      }
    }
}
